<div class="container">
    <div class="jumbotron">
        <img class="burger-image" src="../public/assets/img/Burger.jpg"></img>
        <h1>Eat-Da-Burger</h1>
            <div class="form-group">
                <label for="burger">Order Your Burger</label>
                <input type="name" class="form-control" id="burger-name">
            </div>
            <button type="submit" class="submit-button btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Uneaten Burgers</h5>
                    <div class="card-body">
                       <ul>
                         {{#each burgers}}
                            {{#unless devoured}}
                            <li>
                             <span> {{this.id}} - {{this.burger_name}}</span>
                            <button class="eat-button btn btn-danger" data-id="{{this.id}}" data-neweaten="{{devour}}">Devour!</button>
                            </li>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Burgers Devoured</h5>
                    <div class="card-body">
                          <ul align="center">
                            {{#each burgers}}
                             {{#if devoured}}
                             <li>
                               <span>{{this.id}} - {{this.burger_name}}</span>
                              </li>
                            {{/if}}
                             {{/each}}
                        </ul>
                 </div>
            </div>
         </div>
    </div>
</div>

<script type="text/javascript">
$(function() {
  $(".submit-button").on("click", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    var newBurger = {
      burger_name: $("#burger-name").val().trim(),
      devoured: 0
    };

    // Send the POST request.
    $.ajax("/api/burgers", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("added new burger");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

  $(".eat-button").on("click", function(event) {
        event.preventDefault();

        var id = $(this).data("id");
        var devouredState = {
            devoured: 1
        };
        $.ajax("/api/burgers/" + id, {
            type: "PUT",
            data: devouredState
          }).then(
            function() {
              console.log("burger eaten");
              // Reload the page to get the updated list
              location.reload();
            }
          );
     })
});
</script>