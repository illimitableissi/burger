<div class="container">
    <div class="jumbotron">
        <img class="burger-image" src="../public/assets/img/Burger.jpg"></img>
        <h1>Eat-Da-Burger</h1>
            <div class="form-group">
                <label for="burger">Order Your Burger</label>
                <input type="name" class="form-control" id="burger-name">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Uneaten Burgers</h5>
                    <div class="card-body">
                       <ul>
                         {{#each burgers}}
                            {{#unless devoured}}
                            <li>
                             <span> {{this.id}} - {{this.burger_name}}</span>
                            <button class="eat-button btn btn-danger" data-id="{{this.id}}" data-neweaten="{{devour}}">Devour!</button>
                            </li>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Burgers Devoured</h5>
                    <div class="card-body">
                          <ul align="center">
                            {{#each burgers}}
                             {{#if devoured}}
                               <span>{{this.id}} - {{this.burger_name}}</span>
                                <button class="eat-button btn btn-danger" data-id="{{this.id}}" data-neweaten="{{devour}}">Devour!</button>
                            {{/if}}
                             {{/each}}
                        </ul>
                 </div>
            </div>
         </div>
    </div>
</div>